<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
   >

    <android.widget.RelativeLayout


        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"


        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewId"
            android:layout_width="185dp"
            android:layout_height="400dp"
            android:layout_marginLeft="8dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/label_movie_title_id"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/movie_title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_movie_title_id"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:textColor="#FFAB44A4"
            android:textSize="16sp" />




        <TextView

            android:id="@+id/label_release_date_id"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/imageViewId"
            android:text="@string/release_date"

            android:textSize="16sp" />


        <TextView
            android:id="@+id/label_vote_average_id"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_toRightOf="@id/imageViewId"
            android:paddingTop="16dp"
            android:text="@string/vote_avg" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/releaseDateId"
            android:layout_width="104dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="157dp"
            android:layout_toRightOf="@id/imageViewId"
            android:textSize="16sp" />

        <android.widget.TextView
            android:id="@+id/voteAverageId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="80dp"
            android:layout_toRightOf="@id/imageViewId"
            android:padding="8dp"
            android:textSize="18sp"


            />

        <TextView
            android:id="@+id/label_overview_id"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageViewId"
            android:layout_marginLeft="8dp"
            android:text="@string/plot_synopsis"

            />

        <TextView
            android:id="@+id/plotSynopsisId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_overview_id"
            android:layout_marginLeft="8dp"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/author"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plotSynopsisId"
            android:label="author"
            android:text="Movie Reviews,Author" />

        <TextView

            android:id="@+id/author_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"

            />


        <TextView
            android:id="@+id/content"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_id"
            android:label="content"
            android:text="Content" />

        <TextView
            android:id="@+id/content_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"

            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/label_overview_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="82dp"
            android:text="Watch Trailor 1" />


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/label_overview_id"

            android:layout_marginLeft="16dp"
            android:layout_marginBottom="39dp"
            android:layout_toRightOf="@id/imageViewId"
            android:text="Watch Trailor 2" />


    </android.widget.RelativeLayout>



</ScrollView>